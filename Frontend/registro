    <script>
        function showForm(type) {
            document.getElementById('tienda-form').style.display = type === 'tienda' ? 'block' : 'none';
            document.getElementById('distribuidor-form').style.display = type === 'distribuidor' ? 'block' : 'none';
            document.querySelectorAll('.account-type button').forEach(button => {
                button.classList.remove('active');
            });
            event.target.classList.add('active');
        }
    </script>

